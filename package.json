{
	"name": "kaboomjs",
	"description": "kaboom.js is a JavaScript library that helps you make games fast and fun!",
	"version": "0.4.1",
	"homepage": "https://kaboomjs.com/",
	"repository": "github:replit/kaboom",
	"keywords": [
		"game"
	],
	"browser": "src/kaboom.js",
	"files": [
		"dist/*"
	],
	"scripts": {
		"dev": "node scripts/watch.js src node scripts/build.js",
		"site": "cd site; node ../scripts/watch.js . node .",
		"build": "node scripts/build.js",
		"check": "tsc src/**/*.ts --noEmit --target esnext"
	},
	"devDependencies": {
		"@types/node": "^15.0.1",
		"esbuild": "^0.11.18",
		"typescript": "^4.2.4"
	}
}
